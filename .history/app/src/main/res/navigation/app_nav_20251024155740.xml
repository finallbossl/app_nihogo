<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.nihongomaster.ui.home.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_home_to_vocabularyList"
            app:destination="@id/vocabularyListFragment" />
        <action
            android:id="@+id/action_home_to_readingList"
            app:destination="@id/readingListFragment" />
        <action
            android:id="@+id/action_home_to_listeningList"
            app:destination="@id/listeningListFragment" />
    </fragment>

    <fragment
        android:id="@+id/vocabularyListFragment"
        android:name="com.example.nihongomaster.ui.vocab.VocabularyListFragment"
        android:label="Vocabulary Learning">
        <argument
            android:name="entryTitle"
            android:defaultValue="Vocabulary Learning"
            app:argType="string" />
        <action
            android:id="@+id/action_vocabularyList_to_session"
            app:destination="@id/vocabSessionFragment" />
    </fragment>

    <fragment
        android:id="@+id/vocabSessionFragment"
        android:name="com.example.nihongomaster.ui.vocab.VocabSessionFragment"
        android:label="Vocabulary Learning">
        <argument
            android:name="categoryId"
            app:argType="string" />
        <action
            android:id="@+id/action_session_to_detail"
            app:destination="@id/vocabDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/vocabDetailFragment"
        android:name="com.example.nihongomaster.ui.vocab.VocabDetailFragment"
        android:label="Vocabulary Details">
        <argument
            android:name="wordId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/readingListFragment"
        android:name="com.example.nihongomaster.ui.reading.ReadingListFragment"
        android:label="Reading Exercises">
        <action
            android:id="@+id/action_readingList_to_session"
            app:destination="@id/readingSessionFragment" />
    </fragment>

    <fragment
        android:id="@+id/readingSessionFragment"
        android:name="com.example.nihongomaster.ui.reading.ReadingSessionFragment"
        android:label="Reading Exercises">
        <argument
            android:name="categoryId"
            app:argType="string" />
        <action
            android:id="@+id/action_readingSession_to_detail"
            app:destination="@id/readingDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/readingDetailFragment"
        android:name="com.example.nihongomaster.ui.reading.ReadingDetailFragment"
        android:label="Reading Details">
        <argument
            android:name="articleId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/progressDashboardFragment"
        android:name="com.example.nihongomaster.ui.progress.ProgressDashboardFragment"
        android:label="Progress Dashboard" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.nihongomaster.ui.profile.ProfileFragment"
        android:label="Profile" />

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.example.nihongomaster.ui.notifications.NotificationsFragment"
        android:label="Notifications" />

    <!-- Authentication -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.nihongomaster.ui.auth.LoginFragment"
        android:label="Đăng nhập">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.nihongomaster.ui.auth.RegisterFragment"
        android:label="Đăng ký" />

    <!-- Listening -->
    <fragment
        android:id="@+id/listeningListFragment"
        android:name="com.example.nihongomaster.ui.listening.ListeningListFragment"
        android:label="Luyện Nghe">
        <action
            android:id="@+id/action_listeningList_to_detail"
            app:destination="@id/listeningDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/listeningDetailFragment"
        android:name="com.example.nihongomaster.ui.listening.ListeningDetailFragment"
        android:label="Bài Luyện Nghe">
        <argument
            android:name="exerciseId"
            app:argType="string" />
    </fragment>
</navigation>
